apiVersion: apps/v1
kind: Deployment
metadata:
  name: client-deployment
  namespace: qa
spec:
  replicas: 1
  selector:
    matchLabels:
      app: client
  template:
    metadata:
      labels:
        app: client
    spec:
      containers:
        - name: client
          image: 293337163121.dkr.ecr.us-east-1.amazonaws.com/client:latest
          ports:
            - containerPort: 80
          env:
            - name: REACT_APP_COMMENTS_SERVICE_URL
              value: http://comments-svc.qa.svc.cluster.local:4001
            - name: REACT_APP_POSTS_SERVICE_URL
              value: http://posts-svc.qa.svc.cluster.local:4000
            - name: REACT_APP_QUERY_SERVICE_URL
              value: http://query-svc.qa.svc.cluster.local:4002
            - name: REACT_APP_EVENTBUS_SERVICE_URL
              value: http://event-bus-svc.qa.svc.cluster.local:4005
